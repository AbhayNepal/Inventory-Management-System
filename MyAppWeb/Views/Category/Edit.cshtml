@{
    Layout = "_Layout";
}
@model Category
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-3">
                <h2 class="text-primary">Category</h2>
                <hr/>

            </div>
            <div asp-validation-summary="All"></div>
            <div class="row mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" placeholder="@Model.Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger fw-bold bg-opacity-50"></span>
            </div>
        <div class="row mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" placeholder="@Model.DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger fw-bold bg-opacity-50"></span>
        </div>
        <button class="btn-primary btn" type="submit">Update</button>
        </div>
        <br/>
        <br/>
    <div class="text-center"> <a asp-action="Index" asp-controller="Category"><i class="bi bi-caret-left-fill btn btn-primary "></i></a></div>
    </form>

    @section scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
